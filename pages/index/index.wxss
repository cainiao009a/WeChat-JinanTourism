/**index.wxss**/

.page {
  background: white;
}

.page_title {
  width: 100%;
  height: 300rpx;
  display: flex;
  background: url("https://s2.ax1x.com/2019/12/06/QGxtvn.png");
  background-size: 100% 100%;
  padding-top: 22rpx;
  
}

.page_title .loc_btn {
  color: #fff;
  width: 150rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
}

.page_title .loc_btn .loc_more_img {
  margin-left: 10rpx;
  margin-top: 30rpx;
  height: 10px;
  width: 10px;
}

.page_title .search{
  display: inline-block;
  
}
.page_title .search_btn {
  background: #9eccf5;
  height: 80rpx;
  width: 500rpx;
  border-radius: 10rpx;
  line-height: 80rpx;
  color: #708da6;
  
  display: flex;
  flex-direction: row;
  align-items: center;
}

.page_title .search_btn .seach_img {
  width: 20px;
  height: 20px;
  margin-left: 10px;
  margin-right: 10px;
  

}

.page_title .msg_btn {
  width: 100rpx;
  height: 80rpx;
  text-align: center;

  flex-direction: row;
  align-items: center;
}

.page_title .msg_btn .msg_img {
  width: 30px;
  height: 30px;
}

.near_bg {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  background: white;
}

.icon_near {
  display: block;
  width: 250rpx;
  height: 400rpx;
}

.swiper {
  width: 96%;
  margin-left: 15rpx;
  position: relative;
}

.swiper image {
  width: 100%;
  height: auto;
  align-items: center;
}
.txt {
  width: auto;
  height: 24px;  
  justify-content:right;
  position:absolute;
  right: 10rpx;
  bottom: 20rpx;
  margin: auto;
  text-align: right;
  font-family: "幼圆";
  color:aliceblue;

}
.sub_nav {
  background: white;
  width: 100%;
  height: 180rpx;
  display: flex;
}

.sub_nav .nav_item {
  background: white;
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.sub_nav .nav_item image {
  background: white;
  width: 120rpx;
  height: 120rpx;
}

.sub_nav .nav_item text {
  background: white;
  font-size: 30rpx;
}
