/**index.wxss**/

.page {
  background: rgb(192, 191, 191);
}

.page_title {
  width: 100%;
  height: 300rpx;
  display: flex;
  background: url("https://s2.ax1x.com/2019/12/06/QGxtvn.png");
  background-size: 100% 100%;
  padding-top: 22rpx;
}

.page_title .loc_btn {
  color: #fff;
  width: 150rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
}

.page_title .loc_btn .loc_more_img {
  margin-left: 10rpx;
  margin-top: 30rpx;
  height: 10px;
  width: 10px;
}

.page_title .search_btn {
  background: #9eccf5;
  height: 80rpx;
  width: 500rpx;
  border-radius: 10rpx;
  line-height: 80rpx;
  color: #708da6;
}

.page_title .search_btn .seach_img {
  width: 20px;
  height: 20px;
  margin-left: 10px;
  margin-right: 10px;
}

.page_title .msg_btn {
  width: 100rpx;
  height: 80rpx;
  text-align: center;
}

.page_title .msg_btn .msg_img {
  margin-top: 10rpx;
  width: 30px;
  height: 30px;
}

.page_hot .hot_title {
  /*title*/
  box-sizing: border-box;
  background: white;
  height: 80rpx;
  width: 100%;
  align-items: center;
  font-family: SimHei;
  font-size: 40rpx;
}

.swiper image {
  width: 100%;
  height: auto;
}

.sub_nav {
  margin-top: 10rpx;
  background: white;
  width: 100%;
  height: 250rpx;
  display: flex;
}

.sub_nav .nav_item {
  background: white;
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.sub_nav .nav_item image {
  background: white;
  width: 120rpx;
  height: 120rpx;
}

.sub_nav .nav_item text {
  background: white;
  font-size: 30rpx;
}

.index_map {
  /*地图图片*/
  width: 100%;
  height: 300rpx;
  background: url('https://s2.ax1x.com/2019/12/06/QGx2K1.png');
  background-size: 100% 100%;
  text-align: center;
  margin-bottom: 15rpx;
}

.index_map image {
  /*小人图片*/
  width: 40%;
  height: 100rpx;
  margin-top: 150rpx;
  margin-left: 220rpx;
}
