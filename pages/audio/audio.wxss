/* pages/find/find.wxss */

/*选项*/

.tab {
  display: flex;
  justify-content: space-between;
  padding: 0 24rpx;
  padding-bottom: 20rpx;
  background: #98d361;
  align-items: center;
}

.tab text {
  width: 124rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  background: #addc81;
  color: #eee;
  font-size: 22rpx;
  border-radius: 80rpx;
}

.tab .icon {
  width: 9rpx;
  height: 19rpx;
  background: url(/images/find/more.png)no-repeat;
  background-size: 9rpx 19rpx;
}

.tab .active {
  background: #fff;
  color: #98d361;
}

.view-box {
  width: 100%;
}

.view {
  margin-top: 12rpx;
}

.view .img {
  margin-left: 18rpx;
  position: relative;
  width: 96%;
  height: 450rpx;
}

.view .img image {
  width: 100%;
  height: 100%;
}
.name{
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}
.name .text {
  width: 55%;
  margin-left: 18rpx;
  font-size: 36rpx;
  color:black;
}
.name .icons {
  width: 25%;
}
.name .icons .icon {
  width:36rpx;
  height: 32rpx;
}

.name .eva {
  width:20%;
  font-size: 28rpx;
  color:#8b8b8b;
  align-items: center;
}



.addr{
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}
.addr .icon{
 width: 32rpx;
  height: 32rpx;
  margin-left: 18rpx;
}
.addr .txt{
  width: 100%;
  font-size: 28rpx;
  color:#8b8b8b;
  align-items: center;
}
